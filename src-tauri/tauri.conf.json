{
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:4200",
    "distDir": "../dist/TauriBox",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "tauri-box",
    "version": "1.0.1"
  },

  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://api.dropboxapi.com/*","https://content.dropboxapi.com/*"        
        ]
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$HOME/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "open": true, 
        "save": true 
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.diniz.tauribox",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false    
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TauriBox",
        "width": 800,
        "height": 600
      }
    ]
  }
}
